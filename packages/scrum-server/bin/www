#!/usr/bin/env node
/* eslint-disable no-var */

/**
 * Module dependencies.
 */

var app = require('../app');
var pjson = require('../package.json');
var HttpServer = require('../src/api/server');
var ServerSingletonSocketService = require('../src/services/socket/ServerSingletonSocketService');

/**
 * Normalize a port into a number, string, or false.
 */
function normalizePort(val) {
  var port = parseInt(val, 10);

  if (isNaN(port)) {
    // named pipe
    return val;
  }

  if (port >= 0) {
    // port number
    return port;
  }

  return false;
}

/**
 * Get port from environment and store in Express.
 */

var port = normalizePort(process.env.PORT || '3000');
var server = HttpServer({ app, port, pjson });
app.set('port', port);
app.set('socketService', new ServerSingletonSocketService(server));
